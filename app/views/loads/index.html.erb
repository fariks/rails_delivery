<p id="notice"><%= notice %></p>

<h1>Loads</h1>

<table>
  <thead>
    <tr>
      <th>Deliverydate</th>
      <th>Deliveryshift</th>
      <th>Driver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loads.each do |load| %>
      <tr>
        <td><%= load.deliveryDate %></td>
        <td><%= load.deliveryShift %></td>
        <td><%= load.driver %></td>
        <td><%= link_to 'Edit Orders', load_edit_orders_path(load) %></td>
        <td><%= link_to 'Download', load_download_path(load) %></td>
        <td><%= link_to 'Show', load %></td>
        <td><%= link_to 'Edit', edit_load_path(load) %></td>
        <td><%= link_to 'Destroy', load, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Load', new_load_path %>
<%= form_tag(upload_orders_path, :method => 'post', multipart: true) do %>
    <%= file_field_tag 'csv_file', accept: 'text/csv' %>
    <%= submit_tag 'Submit' %>
<% end %>
